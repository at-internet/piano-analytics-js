{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "ignorePatterns": [
    "business/data-layer/data-layer.js",
    "business/data-layer/data-layer-browser.js",
    "business/data-layer/data-layer-template.js",
    "business/avinsights.js"
  ],
  "rules": {
    "indent": [
      "error",
      4
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "globals": {
    "BUILD_BROWSER": "readonly"
  }
}
